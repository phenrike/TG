<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mainp.paulosantos.mainp.PerfilEdicaoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFoto"
        android:layout_centerHorizontal="true"
        android:src="@drawable/perfilimg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFace"
        android:src="@drawable/imgface"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivWpp"
        android:src="@drawable/imgwpp"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="150dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivInsta"
        android:src="@drawable/imginsta"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSnap"
        android:src="@drawable/imgsnap"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="250dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTwitter"
        android:src="@drawable/imgtwitter"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="300dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLinkk"
        android:src="@drawable/imglink"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivEmail"
        android:src="@drawable/imgemail"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="400dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btCancelar"
        android:backgroundTint="#fb3535"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="175dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="cancelar" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btSalvar"
        android:backgroundTint="#2cd72f"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="salvar" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etFace"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etWpp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etInsta"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etSnap"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etTwitter"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etSite"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/etEmail"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbFace"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="300dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv1"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/privado"
        android:visibility="invisible" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbWpp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="300dp"
